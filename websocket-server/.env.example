# Database connection string (PostgreSQL URL)
# Example: postgresql://username:password@localhost:5432/database_name
DATABASE_URL="postgresql://postgres:password@localhost:5433/new_content_creator_platform?schema=public"

# Secret key for JWT token verification and signing
# Should be a long, random string in production
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
NEXTAUTH_SECRET=random-key

# Port number for the WebSocket server
# Default: 3001
PORT=3001

# Environment mode (development, production, test)
# Default: development
NODE_ENV="development"

# CORS allowed origins (comma-separated list)
# Default: http://localhost:3000
# For multiple origins: http://localhost:3000,https://yourdomain.com
ALLOWED_ORIGINS="http://localhost:3000"

# Rate limiting configuration
# Window time in milliseconds for rate limiting
# Default: 60000 (1 minute)
RATE_LIMIT_WINDOW_MS=60000

# Maximum number of requests per rate limit window
# Default: 100
RATE_LIMIT_MAX_REQUESTS=100

# Logging level (error, warn, info, debug)
# Default: info
LOG_LEVEL="info"